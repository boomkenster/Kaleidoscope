<div class="navbar navbar-inverse">

    <!-- Brand and toggle get grouped for better mobile display -->
    <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <%= link_to image_tag("Kscope.png", class: "navbar-brand", alt: "pixfix_logo"), root_path %>
    </div>

    <!-- Collect the nav links, forms, and other content for toggling -->
    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">

      <!-- <ul class="nav navbar-nav">
      </ul> -->
      <div class="navbar-left" id="location-btn">
          <a href=""><em>Find my location</em></a>
      </div>
      <ul class="nav navbar-nav navbar-right">
        <li class="dropdown">
        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false">Popular Tags <span class="caret"></span></a>
        <ul class="dropdown-menu" role="menu">
          <% if @mapdata.hashes != nil %>
            <% @mapdata.hashes.each do |key, value| %>
              <li> <%= key %></li>
            <% end %>
          <% else %>
            <li><em>Select location...</em></li>
          <% end %>
        </ul>
        </li>
      </ul>

      <% if current_user %>
        <div>
          <h2 class="nav navbar-nav navbar-right navbar-brand"> Welcome <%= JSON.parse(current_user.username)[0] %> </h2>
          <%= image_tag current_user.image_url, class: "img-circle img-thumbnail" %>
          <%= link_to "Logout", logout_path, method: :delete, class: "btn btn-lg btn-default btn-home" %>
        </div>
      <% else %>
          <div class= "nav navbar-nav navbar-right"><%= link_to "Login with Instagram", "auth/instagram", class: "btn btn-default"  %> </div>
      <% end %>

    </div><!-- /.navbar-collapse -->
</div>
